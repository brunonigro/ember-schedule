<!-- values need to be pass without quotes to get value from controller -->
<!-- when you uses quotes, you pass a string -->

<label for="filtro-nome">Filtrar por nome</label>
{{input id="filtro-nome" value=nome}}
<br/>

<table>
    <thead>
        <tr>
            <th>Nome</th>
        </tr>
    </thead>
    <tbody>
        {{#each model as |pessoa|}}
            <tr>
                <td>
                    {{#link-to 'pessoa' pessoa.id}}
                        {{pessoa.nome}}
                    {{/link-to}}
                </td>
            </tr>            
        {{/each}}
    </tbody>
</table>